<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="UserName" Label="BGG Username" Variant="Variant.Outlined"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    public string UserName { get; set; } = "FricKtion95";

    void Submit() => MudDialog.Close(DialogResult.Ok(UserName));

    void Cancel() => MudDialog.Cancel();
}
