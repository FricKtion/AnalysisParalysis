<MudCard>
    <MudCardMedia Image="@GameToDisplay.Thumbnail?.ToString()" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@GameToDisplay.Name</MudText>
        <MudText Typo="Typo.body2">Total Plays: @GameToDisplay.TimesPlayed</MudText>
        <MudText Typo="Typo.body2">Year PublisheD: @GameToDisplay.YearPublished</MudText>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public BoardGame GameToDisplay { get; set; } = new BoardGame();

}
